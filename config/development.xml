<?xml version="1.0" encoding="utf-8" ?>
<application xmlns="http://ns.adobe.com/air/application/2.5">
  <id>com.mutuallyhuman.scout</id>
  <versionNumber>${SCOUT_VERSION}</versionNumber>
  <filename>Scout</filename>
  <name>Scout</name>
  <description>
    Scout is a cross platform, standalone Compass application for designers to get started with using SASS.
  </description>

  <!-- for windows/linux program menus only, ignored on OSX -->
  <programMenuFolder>Scout</programMenuFolder>

  <icon>
    <image16x16>images/logo_16.png</image16x16>
    <image32x32>images/logo_32.png</image32x32>
    <image48x48>images/logo_48.png</image48x48>
    <image128x128>images/logo_128.png</image128x128>
  </icon>

  <initialWindow>
    <content>views/development.html</content>
    <visible>true</visible>
    <width>800</width>
    <height>650</height>
    <minSize>640 480</minSize>
  </initialWindow>
  <supportedProfiles>extendedDesktop</supportedProfiles>
</application>